<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Listar</servlet-name>
        <servlet-class>Controlador.Listar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Sesion</servlet-name>
        <servlet-class>Controlador.Sesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CloseSesion</servlet-name>
        <servlet-class>Controlador.CloseSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarPorArea</servlet-name>
        <servlet-class>Controlador.ListarPorArea</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscarElementoPorNombre</servlet-name>
        <servlet-class>Controlador.BuscarElementoPorNombre</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>upload</servlet-name>
        <servlet-class>com.hmkcode.FileUploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Listar</servlet-name>
        <url-pattern>/Listar</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Registro</servlet-name>
        <servlet-class>Controlador.Registro</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registro</servlet-name>
        <url-pattern>/Registro</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Inicio</servlet-name>
        <servlet-class>Controlador.Inicio</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Inicio</servlet-name>
        <url-pattern>/Inicio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sesion</servlet-name>
        <url-pattern>/Sesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CloseSesion</servlet-name>
        <url-pattern>/CloseSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarPorArea</servlet-name>
        <url-pattern>/ListarPorArea</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscarElementoPorNombre</servlet-name>
        <url-pattern>/BuscarElementoPorNombre</url-pattern>
    </servlet-mapping> 
    <servlet>
        <description/>
        <display-name>ServletActivacionCuenta</display-name>
        <servlet-name>ServletActivacionCuenta</servlet-name>
        <servlet-class>Controlador.ServletActivacionCuenta</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletActivacionCuenta</servlet-name>
        <url-pattern>/ActivacionCuenta</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
